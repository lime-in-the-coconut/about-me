<%= form_for(@tag) do |f| %>
  <ul>
  <% @tag.errors.full_messages.each do |error| %>
    <li><%= error %></li>
  <% end %>
  </ul>
  <p>
    <%= f.label :Tag %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.submit %>
  </p>
  <p>
  	<%= link_to "delete", tag_path, method: :delete, data: {confirm: "You sure you want to COMPLETELY scrap this?"} %>
  </p>
<% end %>